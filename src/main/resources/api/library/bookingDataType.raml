#%RAML 1.0 Library
usage: this is booking data type library

types:
  bookingtypes: 
    type: object
    properties:
      bookingtype: string
      
  stopLocation:
    type: object
    properties:
      location: 
        type: string
        
  stopLocationDetails:
    type: object
    properties:
      id:
      locationCode: 
      location:
      departure:
      arrival:
                
  originLocation:
    type: object
    properties:
      locationCode:
        type: string
        required: false
      locationDescription:
        type: string
        required: false

  destinationLocation:
     type: object
     properties:
      locationCode:
        type: string
        required: false
      locationDescription:
        type: string
        required: false 
  
  rules:
    type: object
    properties:
      rule:
        type: string
        
  images:
    type: object
    properties:
      image:
        type: string
           
  coupons:
    type: object
    properties:
      code:
      description:
      rule:
      
  cancellation:
    type: object
    properties:
      timeFrame:
      charges:

  reschedule:
    type: object
    properties:
      timeFrame:
      charges:   

  booking:
    properties:
      name:
      id:
      number:
      description:
        type: string
        required: false
      rating:
        type: number
        example: 0
      bookingTypes:
        type: bookingtypes[]
        minItems: 1
      startDate:
        type: date-only
      endDate:
        type: date-only
      startTime:
        type: time-only
      endTime:
        type: time-only
      noOfDays:
        type: number
        default: 0
      layOver:
        type: number
        default: 0
      noOfStops:
        type: number
        default: 0
