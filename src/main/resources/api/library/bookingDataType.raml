        type: array
        items: stopLocation[]
        required: false
      origin:
        type: originLocation[]
      destination:
        type: destinationLocation[]
      price:
        properties:
          baseFare: 
            type: number
            default: 0
          taxes:
            type: number
            default: 0
          total:
            type: number
            default: 0
      currency:
